---
NestedIterators:
  enabled: true
  exclude: []
  max_allowed_nesting: 3
  ignore_iterators:
  - tap
DuplicateMethodCall:
  max_calls: 2
TooManyStatements:
  enabled: true
  exclude:
  - initialize
  max_statements: 10

exclude_paths:
  - 'db/migrate'
"config":
  IrresponsibleModule:
    enabled: false
"app/controllers":
  IrresponsibleModule:
    enabled: false
  NestedIterators:
    max_allowed_nesting: 2
  UnusedPrivateMethod:
    enabled: false
  InstanceVariableAssumption:
    enabled: false
"app/channels":
  IrresponsibleModule:
    enabled: false
"app/services":
  IrresponsibleModule:
    enabled: false
"app/helpers":
  IrresponsibleModule:
    enabled: false
  UtilityFunction:
    enabled: false
"app/mailers":
  InstanceVariableAssumption:
    enabled: false
"spec/mailers/previews":
  UtilityFunction:
    enabled: false
"spec/support":
  UtilityFunction:
    enabled: false
"app/controllers/api/v1":
  UncommunicativeModuleName:
    enabled: false
  IrresponsibleModule:
    enabled: false
"app/serializers/api/v1":
  UncommunicativeModuleName:
    enabled: false
